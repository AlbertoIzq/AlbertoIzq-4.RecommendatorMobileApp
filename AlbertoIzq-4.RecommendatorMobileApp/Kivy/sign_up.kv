<SignUpScreen>:
	GridLayout:
		cols: 1
		GridLayout:
			cols: 1
			padding: 15, 15
			spacing: 20, 20
			Label:
				text: "Sign up!"
				font_size: '25sp'
			TextInput:
				id: username
				hint_text: "Username"
			TextInput:
				id: password
				hint_text: "Password (8 char, 1 capital letter and 1 number min)"
				password: True
			TextInput:
				id: fav_word
				hint_text: "Favourite word (used as password hint)"
			Label:
				id: sign_up_wrong
				text: ""
		GridLayout:
			cols: 2
			size_hint: 0.2, 0.2
			padding: 10, 10
			spacing: 10, 0
			RelativeLayout:
				Button:
					text: "Submit"
					on_press: root.add_user(root.ids.username.text, root.ids.password.text, root.ids.fav_word.text)
					size_hint: 0.6, 0.7 ## changes the size by this factor
					pos_hint: {'center_x' : 0.5, 'center_y' : 0.5}
			RelativeLayout:
				Button:
					text: "Login page"
					on_press: root.goToLogin()
					size_hint: 0.6, 0.7 ## changes the size by this factor
					pos_hint: {'center_x' : 0.5, 'center_y' : 0.5}